
@{
    ViewBag.Title = "Detail";
    Layout = "~/Areas/Admin/Views/Shared/_Detail.cshtml";
}

@section modalTitle
{
    Thêm mới phụ cấp
}

<div class="form-group">
    <label for="ID">ID</label>
    <input type="text" class="form-control" id="ID" placeholder="ID" disabled="disabled"/>
</div>
<div class="form-group">
    <label for="IDChucVu">Chức vụ</label>
    <select id="IDChucVu" class="form-control">
        <option disabled selected> -- Select an option -- </option>
    </select>
</div>
<div class="form-group">
    <label for="MoTaPhuCap">Mô tả phụ cấp</label>
    <textarea type="text" class="form-control" id="MoTaPhuCap" placeholder="Mô tả"></textarea>
</div>
<div class="form-group">
    <label for="SoTien">Số tiền</label>
    <input type="number" class="form-control" id="SoTien" placeholder="Số tiền" />
</div>
<div class="">
    <label for="TinhTrang">Tình trạng</label>
    <div class="material-switch">
        <input id="TinhTrang" name="TinhTrang" type="checkbox"/>
        <label for="TinhTrang" class="label-primary"></label>
    </div>
</div>