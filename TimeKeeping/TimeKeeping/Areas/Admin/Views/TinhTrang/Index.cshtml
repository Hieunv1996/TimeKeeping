@{
    Layout = "../Shared/_Layout.cshtml";
}

@section header{
    Quản lý tình trạng của chấm công
}

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Danh sách tình trạng chấm công
            </div>
            <div class="panel-body">
                <div class="row search-form form-group">
                    <div class="col-lg-6">
                        <div class="input-group">
                            <input type="text" id="txtSearch" value="@ViewBag.SearchString" class="form-control" name="keyword" placeholder="Tìm kiếm tình trạng chấm công...">
                            <span class="input-group-btn">
                                <button class="btn btn-default" type="submit" onclick="loadData()">Tìm kiếm</button>
                            </span>
                        </div>
                    </div>
                    <div class="col-lg-4"></div>
                    <div class="col-lg-2">
                        <button type="button" class="btn btn-success" data-toggle="modal" data-target="#myModal" onclick="clearTextBox();">Thêm tình trạng</button>
                    </div>
                </div>
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                        <tr>
                            <th>ID</th>
                            <th>Kí hiệu</th>
                            <th>Mô tả</th>
                            <th>Hành động</th>
                        </tr>
                        </thead>
                        <tbody class="tbody"></tbody>
                    </table>
                    @*@Html.PagedListPager(Model, page => Url.Action("List", new { page, @keyword = @ViewBag.SearchString }))*@
                </div>
            </div>
        </div>
    </div>
</div>
@section assets
{
    <script src="/Assets/Admin/js/common.js"></script>
    <script src="/Assets/Admin/js/tinhtrang.js"></script>
}

@RenderPage("../TinhTrang/Detail.cshtml")
