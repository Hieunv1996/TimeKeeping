@*@model PagedList.IPagedList<Model.EF.PhongBan>
    @using PagedList.Mvc*@

@{
    Layout = "../Shared/_Layout.cshtml";
}

@section header{
    Quản lý danh sách phòng ban
}

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Danh sách phòng ban
            </div>
            <div class="panel-body">
                <div class="row search-form form-group">
                    <div class="col-lg-6">
                        <div class="input-group">
                            <input type="text" id="txtSearch" value="@ViewBag.SearchString" class="form-control" name="keyword" placeholder="Nhập tên phòng ban cần tìm...">
                            <span class="input-group-btn">
                                <button class="btn btn-secondary" type="submit" onclick="loadData()">Tìm kiếm</button>
                            </span>
                        </div>
                    </div>
                    <div class="col-lg-4"></div>
                    <div class="col-lg-2">
                        <button type="button" class="btn btn-success" data-toggle="modal" data-target="#myModal" onclick="clearTextBox();">Thêm phòng ban</button>
                    </div>
                </div>
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Tên phòng ban</th>
                                <th>Hành động</th>
                            </tr>
                        </thead>
                        <tbody class="tbody"></tbody>
                    </table>
                    @*@Html.PagedListPager(Model, page => Url.Action("List", new { page, @keyword = @ViewBag.SearchString }))*@
                </div>
            </div>
        </div>
    </div>
</div>
@section assets
{
    <script src="/Assets/Admin/js/common.js"></script>
    <script src="/Assets/Admin/js/phongban.js"></script>
}

@RenderPage("../PhongBan/Detail.cshtml")
