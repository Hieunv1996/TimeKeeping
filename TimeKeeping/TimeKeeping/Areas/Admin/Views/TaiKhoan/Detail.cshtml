@model Model.EF.TaiKhoan
@{
    ViewBag.Title = "Detail";
    Layout = "~/Areas/Admin/Views/Shared/_Detail.cshtml";
}

@section modalTitle
{
    Thêm mới tài khoản
}
<div class="form-group">
    <label for="ID">ID</label>
    <input type="text" class="form-control" id="ID" placeholder="ID Tài khoản" disabled="disabled" />
</div>
<div class="form-group">
    <label for="IDNhanVien">ID Nhân viên</label>
    <select id="IDNhanVien" class="form-control">
        <option disabled selected> -- Select an option -- </option>
    </select>
</div>
<div class="form-group">
    <label for="TenDangNhap">Tên đăng nhập</label>
    <input type="text" class="form-control" id="TenDangNhap" placeholder="Tên đăng nhập" />
</div>
<div class="form-group">
    <label for="MatKhau">Mật khẩu mới(Tùy chọn)</label>
    <input type="password" class="form-control" id="MatKhau" placeholder="Mật khẩu mới" />
</div>
<div class="form-group">
    <label for="ReMatKhau">Nhập lại mật khẩu mới</label>
    <input type="password" class="form-control" id="ReMatKhau" placeholder="Nhập lại mật khẩu mới" />
</div>
<div class="form-group">
    <label for="IDQuyen">Quyền</label>
    <select id="IDQuyen" class="form-control">
        <option disabled selected> -- Select an option -- </option>
    </select>
</div>
<div class="form-group">
    <label for="TinhTrang">Tình trạng</label>
    <select id="TinhTrang" class="form-control">
        <option disabled selected> -- Select an option -- </option>
        <option value="true">Kích hoạt</option>
        <option value="false">Khóa</option>
    </select>
</div>